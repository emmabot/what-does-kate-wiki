{
  "manifest_version": 3,
  "name": "Wiki Tracker",
  "version": "1.0.0",
  "description": "Automatically tracks Wikipedia articles you read and logs them to your profile.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wiki Tracker"
  },
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  }
}

