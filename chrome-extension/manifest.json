{
  "manifest_version": 3,
  "name": "Wikipedia Reading Tracker",
  "version": "1.0.0",
  "description": "Automatically tracks Wikipedia articles you read and logs them to your profile.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.wikipedia.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/wiki/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wikipedia Reading Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

